<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/search_text1"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:padding="14dp"
        android:text="@string/search_text1"
        android:textColor="@color/colorText"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/search_text2"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:padding="6dp"
        android:text="@string/search_text2"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <!-- Radio buttons til að velja milli gefins og óska eftir -->
    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:checkedButton="@+id/radio_give"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="390dp">

        <RadioButton
            android:id="@+id/radio_give"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:duplicateParentState="false"
            android:text="@string/gefins"
            android:textColor="@color/colorPrimary"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="384dp" />


        <RadioButton
            android:id="@+id/radio_take"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:text="@string/oskaeftir"
            android:textColor="@color/colorPrimary"
            tools:layout_editor_absoluteX="104dp"
            tools:layout_editor_absoluteY="388dp" />
    </RadioGroup>

    <!-- Fyrirsögn fyrir tegund (yfirflokk) -->
    <TextView
        android:id="@+id/textinn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="@string/tegund"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <!-- Spinner fyrir tegund (yfirflokk) -->
    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="42dp" />

    <!-- Fyrirsögn fyrir tegund af tegund (undirflokk) -->
    <TextView
        android:id="@+id/texti2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="@string/tegundaftegund" />

    <!-- Spinner fyrir tegund af tegund (undirflokk) -->
    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Fyrirsögn fyrir lit -->
    <TextView
        android:id="@+id/litur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="@string/litur" />

    <!-- Spinner fyrir lit -->
    <Spinner
        android:id="@+id/spinner6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Hnappur til að staðfesta -->
    <Button
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@color/colorPrimary2"
        android:ems="10"
        android:layout_marginBottom="10dp"
        android:text="@string/addtype"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="147dp" />

    <!-- Hnappur tilbaka -->
    <Button
        android:id="@+id/tilbaka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:background="@drawable/button_border"
        android:ems="10"
        android:layout_marginBottom="10dp"
        android:text="@string/tilbaka"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="84dp" />


</LinearLayout>